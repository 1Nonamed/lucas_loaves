---
interface Props {
  href: string;
  align?: string;
  width?: string;
  size?: "default" | "large";
  class?: string;
}

const {
  href,
  align = "self-end",
  width = "fit-content",
  size = "default",
  class: className,
} = Astro.props as Props;

const sizeClasses = {
  default: "py-2 px-4 text-sm md:text-lg",
  large: "py-3 px-8 text-base md:text-xl",
};
---

<a
  href={href}
  class={`${align} ${width} ${sizeClasses[size]} ${className || ""} bg-warm-gold rounded-lg text-gray-50 font-medium hover:bg-warm-gold/90 hover:scale-105 active:scale-95 transition-all outline-none focus:ring-2 focus:ring-warm-gold/50 text-center cursor-pointer flex items-center justify-center`}
>
  <slot />
</a>
