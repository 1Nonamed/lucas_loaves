---
import Layout from "../../layouts/Layout.astro";
import ApplicationForm from "../../components/ApplicationForm";
import { getJobBySlug } from "../../actions/careers";

const { slug } = Astro.params;
const job = await getJobBySlug(slug!);

if (!job) {
  return Astro.redirect("/404");
}
---

<Layout>
  <main class="bg-stone-50 min-h-screen py-20">
    <div class="max-w-4xl mx-auto px-4">
      <a
        href="/careers"
        class="inline-flex items-center text-stone-500 hover:text-earthy-brown my-8 transition-colors"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5 mr-2"
          viewBox="0 0 20 20"
          fill="currentColor"
        >
          <path
            fill-rule="evenodd"
            d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z"
            clip-rule="evenodd"></path>
        </svg>
        Back to Careers
      </a>

      <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 gap-8">
        <div class="md:col-span-2 space-y-8">
          <header>
            <div class="flex gap-3 text-sm font-medium text-warm-gold mb-2">
              <span>{job.type}</span>
              <span>â€¢</span>
              <span>{job.location}</span>
            </div>
            <h1 class="text-4xl font-bold text-earthy-brown mb-6">
              {job.title}
            </h1>
            <p class="text-lg text-stone-600 leading-relaxed">
              {job.description}
            </p>
          </header>

          <section
            class="bg-white p-8 rounded-2xl shadow-sm border border-stone-100"
          >
            <h2 class="text-2xl font-bold text-earthy-brown mb-4">
              Requirements
            </h2>
            <ul class="space-y-3">
              {
                job.requirements.map((req) => (
                  <li class="flex items-start gap-3 text-stone-600">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="h-6 w-6 text-warm-gold shrink-0"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M5 13l4 4L19 7"
                      />
                    </svg>
                    {req}
                  </li>
                ))
              }
            </ul>
          </section>
        </div>
        <div class="md:col-span-1 lg:col-span-2">
          <div class="sticky top-24">
            <ApplicationForm client:load jobTitle={job?.title} />
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>
