---
import Layout from "../layouts/Layout.astro";
import Header from "../components/shared/Header.astro";

import SearchForm from "../components/SearchForm.astro";
import ProductCard from "../components/ProductCard.astro";
import { products } from "../actions/products";
const allProducts = await products();
---

<Layout>
  <Header />
  <main class="pt-16 flex flex-col grow md:pt-24 lg:pt-32">
    <section class="py-6 px-4 md:max-w-6xl md:mx-auto">
      <h1
        class="text-4xl md:text-6xl font-bold max-w-4xl leading-tight text-earthy-brown hover:text-warm-gold transition ease-in-out pb-4"
      >
        Our Products
      </h1>
      <SearchForm />
      <div class="grid grid-cols-2 md:grid-cols-3 gap-4 md:gap-8 py-4">
        {
          allProducts?.map((product) => (
            <ProductCard
              src={product.image}
              productName={product.name}
              price={product.price}
              description={product.description.summary}
              href={`/products/${product.slug}`}
            />
          ))
        }
      </div>
    </section>
  </main>
</Layout>

<style>
  body {
    background-color: #f0f0ea;
  }
</style>
